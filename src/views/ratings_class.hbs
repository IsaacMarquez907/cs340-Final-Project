<!DOCTYPE HTML>
<html>

<head>
  <title>Classes_page</title>
  <meta name="description" content="website description" />
  <meta name="keywords" content="website keywords, website keywords" />
  <meta http-equiv="content-type" content="text/html; charset=windows-1252" />
  <link rel="stylesheet" type="text/css" href="style.css" />
</head>

<body>
  <div id="main">
    <div id="header">
      <div id="logo">
        <div id="logo_text">
          <!-- Title on every page -->
          <h1><a href="/home">Rate<span class="logo_colour">MyStudents</span></a></h1>
          <h2>Avoid those nasty, uninspired students.</h2>
        </div>
      </div>
      <div id="menubar">
        <ul id="menu">
          <!-- main links on top of page-->
          <li><a href="/home">Home</a></li>
          <li><a href="/ratings">Ratings</a></li>
          <li  class="selected"><a href="/Classes">Classes</a></li>
          <li><a href="/Students">Students</a></li>
          <li>{{#if logStatus}}{{else}}<a href="/login">Login</a>{{/if}}</li>
          <li>{{#if logStatus}}<a href="/addRating">Add Rating</a>{{/if}}</li>
          <li>{{#if logStatus}}<a href="/logout">Log Out</a>{{/if}}</li>
        </ul>
      </div>
    </div>
	<div id="site_content">
		<div id="sidebar_container">
			<div class="sidebar">
			<div class="sidebar_top"></div>
			<div class="sidebar_item">
				<!-- sidebar items -->
				<h3>Back to Classes</h3>
				<p>Hit back on browser or classes tab to get back to class page. </p>
			</div>
			<div class="sidebar_base"></div>
			</div>
		</div>
       <div id="content">
        <!-- login page info -->
        <h1 class="h1-page-title">{{title}}</h1>

         {{#each results}}
		<table class="table-ratings">
			<thead>
				<th><b>{{this.student_id}} - {{this.name}}</b></th>	
			</thead>
			<tbody>
				<td>
					{{this.comment}} 

					<h4 class="h4-ratings">number rating: {{this.number_scale}}</h4>
				</td>
			</tbody>
		</table>
		{{/each}}
      </div>
	</div>  
  </div>
</body>
</html>

